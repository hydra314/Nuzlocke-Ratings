<div class="container mt-5">
  <% if (errors && errors.length > 0) { %>
  <ul>
    <% for (let error of errors) { %>
    <li><%= error %></li>
    <% } %>
  </ul>
  <% } %>
  <h3>Register</h3>
  <form method="post">
    <div class="form-row mb-3">
      <div class="form-group col-md-6">
        <label for="player-username">Username*</label>
        <input
          type="text"
          class="form-control"
          name="username"
          id="player-username"
          placeholder="Enter your username here (can't be changed later)"
          required
        />
      </div>
      <div class="form-group col-md-6">
        <label for="player-password">Password*</label>
        <input
          type="password"
          class="form-control"
          name="password"
          id="player-password"
          placeholder="Enter your password here"
          required
        />
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="player-link">Link</label>
        <input
          type="text"
          class="form-control"
          name="link"
          id="player-link"
          placeholder="Enter your link here (e.g. forum profile, YouTube)"
        />
      </div>
      <div class="form-group col-md-4">
        <label for="player-email">Email</label>
        <input
          type="text"
          class="form-control"
          name="email"
          id="player-email"
          placeholder="Enter your email here"
        />
      </div>
      <div class="form-group col-md-4">
        <label for="player-discord">Discord</label>
        <input
          type="text"
          class="form-control"
          name="discord"
          id="player-discord"
          placeholder="Discord"
        />
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
  </form>
</div>
