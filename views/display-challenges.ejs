<div class="table-wrapper">
  <% if(runs.length > 0){ %>
  <table
    class="table table-hover table-dark table-striped"
    id="display-challenges-table"
  >
    <thead class="thead-info">
      <tr>
        <th
          scope="col"
          onclick="sortTable(0, 'display-challenges-table')"
          class="sortable"
        >
          #
        </th>
        <th
          scope="col"
          onclick="sortTable(1, 'display-challenges-table')"
          class="sortable"
        >
          Challenge Name
        </th>
        <th
          scope="col"
          onclick="sortTable(2, 'display-challenges-table')"
          class="sortable"
        >
          Tier
        </th>
        <th
          scope="col"
          onclick="sortTable(3, 'display-challenges-table')"
          class="sortable"
        >
          Associated Run
        </th>
        <th scope="col">Description</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i = 0; i < challenges.length; i++){ %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= challenges[i].challenge_name %></td>
        <td><%= challenges[i].tier %></td>
        <td><%= challenges[i].run_name %></td>
        <td><%= challenges[i].description %></td>
      </tr>
      <% } %>
    </tbody>
  </table>
  <% } else { %>
  <p class="text-center">
    No challenges found.
  </p>
  <% } %>
</div>
